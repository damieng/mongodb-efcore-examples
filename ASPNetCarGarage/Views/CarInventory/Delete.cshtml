@model ASPNetCarGarage.Models.Car

<h2>@ViewData["Title"]</h2>
<hr/>

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Model"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            <label asp-for="NumberPlate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.NumberPlate
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Location"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="Delete car" class="btn btn-danger"
           onclick="return confirm('Are you sure you want to delete this car?');"/>
    <button asp-controller="CarInventory" asp-action="Index" class="btn btn-secondary">Back to list</button>
</form>
